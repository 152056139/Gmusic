<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_favourite_normal" />

    <TextView
        android:id="@+id/tv_item_music_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_favourite"
        android:layout_alignTop="@id/iv_item_favourite"
        android:layout_toRightOf="@id/iv_item_favourite"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="凉凉"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_favourite"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_small" />

</RelativeLayout>